<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.prince.bpl">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreen"
            android:theme="@style/AppTheme.nobar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TeamList"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".TeamInfo"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".HomePage"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".MatchDetail"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".ScoreCard"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".RegisterPlayer"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".LeaderBoard"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".AuxionList"
            android:theme="@style/AppTheme.nobar" />
        <activity
            android:name=".PlayerInfo"
            android:theme="@style/AppTheme.nobar" />

        <activity android:name=".SoldActivity"
            android:theme="@style/AppTheme.nobar"/>
    </application>

</manifest>