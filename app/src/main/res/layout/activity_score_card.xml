<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.prince.bpl.ScoreCard">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:textColor="#ffffff"
            android:paddingTop="8dp"
            android:text="Score Card"
            android:layout_marginLeft="2dp"
            android:textSize="32sp"
            android:singleLine="true"
            android:textStyle="bold"
            android:fontFamily="sans-serif-condensed" />

    </android.support.v7.widget.Toolbar>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:text="South Africa Won by 2 run"
                android:layout_marginLeft="16dp"
                android:fontFamily="sans-serif"
                android:textColor="#ff0000"
                android:textSize="16sp"
                android:id="@+id/TeamWonComment"/>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="India"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:id="@+id/TeamOneName"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#388e3c">

                    <TextView
                        android:text="Batsman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" R"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="2"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="3"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="4"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamOnePlayedList"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                </android.support.v7.widget.RecyclerView>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginTop="8dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#388e3c">

                    <TextView
                        android:text="Bowler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" O"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="2"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="3"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" R"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="4"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamOneBallPlayedList"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                </android.support.v7.widget.RecyclerView>

            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginTop="16dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:text="SriLanka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:id="@+id/TeamTwoName"/>

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#388e3c">

                    <TextView
                        android:text="Batsman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" R"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="2"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="3"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="4"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamTwoPlayedList"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp">

                </android.support.v7.widget.RecyclerView>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:layout_marginTop="4dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#388e3c">

                    <TextView
                        android:text="Bowler"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="1"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" O"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="2"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" W"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="3"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                    <TextView
                        android:text=" R"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_column="4"
                        android:layout_marginRight="32dp"
                        android:textColor="#ffffff"
                        android:textStyle="normal"
                        android:fontFamily="sans-serif-condensed"/>

                </TableRow>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/TeamTwoBallPlayedList"
                    android:paddingLeft="16dp"
                    android:paddingTop="8dp"
                    android:layout_marginBottom="16dp">

                </android.support.v7.widget.RecyclerView>

            </TableLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
