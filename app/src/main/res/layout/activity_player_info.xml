<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.prince.bpl.PlayerInfo"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="256dp"
                android:id="@+id/PlayerInfoImage"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="fitXY"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:paddingLeft="32dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="NAME : "
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Abhishek Kumar"
                    android:id="@+id/InfoName"
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:fontFamily="sans-serif-condensed"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:paddingLeft="32dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="SPEC  : "
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Bowler"
                    android:id="@+id/InfoSpec"
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:fontFamily="sans-serif-condensed"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="0"
                android:paddingLeft="32dp"
                android:paddingRight="16dp">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:text="PRICE : "
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2 K"
                    android:id="@+id/InfoPrice"
                    android:textSize="22sp"
                    android:layout_marginLeft="32dp"
                    android:fontFamily="sans-serif-condensed"
                    android:singleLine="true"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_weight="0"
                android:paddingRight="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:text="BID : "
                    android:layout_marginLeft="32dp"
                    android:textSize="32sp"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif-condensed" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="200000"
                    android:fontFamily="sans-serif-condensed"
                    android:textSize="44sp"
                    android:layout_weight="1"
                    android:id="@+id/InfoCurrentBid"
                    android:textAlignment="textStart"/>

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/InfoBidPlus"
                    android:src="@drawable/ic_add_circle_outline_black_24dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingLeft="32dp"
                android:paddingRight="32dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <Button
                    android:id="@+id/InfoSell"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="4dp"
                    android:text="SOLD"
                    android:fontFamily="serif-monospace"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    android:background="@color/black"
                    android:textColor="#ffffff"
                    android:alpha="0.9"/>

                <Button
                    android:id="@+id/InfoUnsole"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:layout_marginLeft="8dp"
                    android:text="UNSOLD"
                    android:fontFamily="serif-monospace"
                    android:textAlignment="center"
                    android:textSize="32sp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:background="@color/black"
                    android:textColor="#ffffff"
                    android:alpha="0.9"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
