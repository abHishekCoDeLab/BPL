<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.android.prince.bpl.AuxionList"
    android:background="#ffffff">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/ToolBarAuxionList"
        android:background="@color/colorPrimary"/>


    <com.miguelcatalan.materialsearchview.MaterialSearchView
        android:id="@+id/SearchBarAuxionList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:searchBackground="@color/white"
        app:searchSuggestionBackground="@color/colorPrimary"
        android:textColor="@color/black"
        android:textColorHint="#9E9E9E" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/AuxionListView"
        android:layout_below="@id/ToolBarAuxionList" />

    <ProgressBar
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:id="@+id/ProgressAuction"/>

</RelativeLayout>
