<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="8dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IitIans : 224"
                android:textSize="22sp"
                android:layout_marginLeft="16dp"
                android:id="@+id/RecentTeamOne"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BIitIans : 225"
                android:textSize="22sp"
                android:id="@+id/RecentTeamTwo"
                android:layout_below="@id/RecentTeamOne"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="4dp"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BitIans won"
                android:textSize="16sp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:id="@+id/RecentTeamWon"
                android:background="@color/cricbuzz"
                android:textColor="#ffffff"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-condensed"
                android:paddingRight="8dp" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>